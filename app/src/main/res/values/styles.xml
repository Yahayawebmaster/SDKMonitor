<resources>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary_dark_light</item>
        <item name="colorAccent">@color/md_indigo_A200</item>

        <item name="mainCardColor">@color/md_grey_50</item>

        <item name="strongColor">@color/FontStrong</item>
        <item name="weakColor">#67687c</item>
        <item name="weakerColor">@color/md_grey_500</item>
        <item name="cardSeparatorColor">@color/md_grey_200</item>

        <item name="toolbarColor">@color/white</item>
        <item name="standardCardColor">@color/md_grey_100</item>

        <item name="searchBoxColor">@color/md_grey_100</item>
        <item name="searchIconColor">@color/md_grey_600</item>

        <item name="windowBackground">@color/window_background_light</item>

        <item name="android:windowBackground">?windowBackground</item>

        <item name="indicatorFastScrollerStyle">@style/Widget.FastScrollSample.FastScroller</item>
        <item name="indicatorFastScrollerThumbStyle">
            @style/Widget.FastScrollSample.FastScrollerThumb
        </item>

        <item name="md_corner_radius">16dp</item>
        <item name="md_background_color">?windowBackground</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_dark</item>
        <item name="colorAccent">@color/md_indigo_A200</item>

        <item name="mainCardColor">@color/primary_dark</item>
        <item name="cardSeparatorColor">#161F2B</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

        <item name="toolbarColor">@color/primary_dark</item>
        <item name="strongColor">@color/white</item>
        <item name="weakColor">#CCFFFAFA</item> <!-- 80% white -->
        <item name="weakerColor">#88FFFAFA</item>
        <item name="standardCardColor">@color/primary_dark</item>

        <item name="searchBoxColor">@color/primary_dark_dark</item>
        <item name="searchIconColor">@color/white</item>

        <item name="windowBackground">@color/window_background_dark</item>
        <item name="android:windowBackground">?windowBackground</item>
        <item name="android:navigationBarColor">@color/window_background_dark</item>

        <item name="indicatorFastScrollerStyle">@style/Widget.FastScrollSample.FastScroller</item>
        <item name="indicatorFastScrollerThumbStyle">
            @style/Widget.FastScrollSample.FastScrollerThumb
        </item>

        <item name="md_corner_radius">16dp</item>
        <item name="md_background_color">?windowBackground</item>
    </style>

    <style name="BottomNavActive">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="BottomNavInactive">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="Widget.FastScrollSample.FastScroller" parent="Widget.IndicatorFastScroll.FastScroller">
        <item name="iconColor">@color/pressed_selector</item>
        <item name="android:textAppearance">@style/FastScrollerAppearance</item>
        <item name="android:textColor">@color/pressed_selector</item>
    </style>

    <style name="FastScrollerAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.FastScrollSample.FastScrollerThumb" parent="Widget.IndicatorFastScroll.FastScrollerThumb">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.FastScrollSample.FastScrollerThumb.Colorful">
        <item name="thumbColor">?colorAccent</item>
    </style>

    <style name="ClickableImageView">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="ItemTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">?strongColor</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
